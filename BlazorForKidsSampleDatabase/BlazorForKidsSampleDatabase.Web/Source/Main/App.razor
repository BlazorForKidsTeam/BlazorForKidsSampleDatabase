<!DOCTYPE html>
<html lang="en" class="@currentTheme">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

	<BlazorForKids.Designer.Web.Widgets.Shared.ImportBlazorForKidsDefaultStyles />
    <BlazorForKids.Designer.Web.Widgets.Shared.ImportBlazorForKidsDefaultColorScheme />
    <BlazorForKids.Designer.Web.Widgets.Shared.ImportBlazorForKidsJS/>
	
	
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["BlazorForKidsSampleDatabase.Web.styles.css"]" />
    <ImportMap />
    <HeadOutlet @rendermode="PageRenderMode" />
	
    <title>BlazorForKidsSampleDatabase</title>
	
</head>

<body>
    <Routes @rendermode="PageRenderMode" />
    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? PageRenderMode =>
        HttpContext.AcceptsInteractiveRouting() ? InteractiveServer : null;

            private string currentTheme=>HttpContext.Request.Cookies["bk-theme"]=="dark-theme"? "dark-theme":"light-theme";
}
